{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./resources/react/*"],
      "~/*": ["./public/*"],
      "~bootstrap/*": ["./node_modules/bootstrap/scss/*"],
      "~tailwind/*": ["./config/tailwind/*"],
    }
  },
  "include": [
    "resources/react/**/*.ts",
    "resources/react/**/*.tsx",
    "resources/react/**/*.d.ts"
  ]
}
